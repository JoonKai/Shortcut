<Window x:Class="Shortcut.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shortcut="clr-namespace:Shortcut.Views.ControlViews"
        xmlns:controls="clr-namespace:SJSControls.Controls.Composite;assembly=SJSControls"
        xmlns:local="clr-namespace:Shortcut.Views"
        mc:Ignorable="d"
        Title="MainView" Height="1200" Width="500" WindowStyle="None" Background="{StaticResource COLOR_DARK_GRAY}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="20" ResizeBorderThickness="2"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#region 탑바-->
        <controls:SJS_TopBarControl Grid.Row="0" Background="{StaticResource COLOR_TEAL}" Margin="0 0 0 2"/>
        <!--#endregion-->
        <!--#region 상단메뉴-->
        <Grid Grid.Row="1">

        </Grid>
        <!--#endregion-->
        <!--#region 라인-->
        <Grid Grid.Row="2" Background="{StaticResource COLOR_BEIGE}" />
        <!--#endregion-->
        <!--#region 메인화면-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <!--#region 좌측패널-->
            <Grid Grid.Column="0">
                <shortcut:ShorcutView Grid.Row="3" Margin="5"/>
            </Grid>
            <!--#endregion-->
            <!--#region 메인-그리드스플리터-->
            <GridSplitter Background="{StaticResource COLOR_DARK_ORANGE}" Grid.Column="1" Width="3" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
            <!--#endregion-->
            <!--#region 우측패널-->
            <Grid Grid.Column="2">
                
            </Grid>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>

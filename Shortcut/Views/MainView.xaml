<Window x:Class="Shortcut.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shortcut="clr-namespace:Shortcut.Views.ControlViews"
        xmlns:controls="clr-namespace:SJSControls.Controls.Composite;assembly=SJSControls"
        xmlns:local="clr-namespace:Shortcut.Views"
        mc:Ignorable="d"
        Title="MainView" Height="800" Width="1200" WindowStyle="None" Background="{StaticResource COLOR_DARK_GRAY}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="20" ResizeBorderThickness="2"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <!--#region 탑바-->
        <controls:SJS_TopBarControl VerticalAlignment="Center" Grid.Row="0"/>
        <!--#endregion-->
        <Border Grid.Row="1" Margin="2" BorderBrush="{StaticResource COLOR_SALMON}" BorderThickness=".5">
            <Grid Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="1"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--#region 상단메뉴-->
                    <Grid Grid.Row="0">

                    </Grid>
                    <!--#endregion-->
                    <!--#region 라인-->
                    <Grid Grid.Row="1" Background="{StaticResource COLOR_BEIGE}" />
                    <!--#endregion-->
                    <!--#region 메인화면-->
                    <Grid Grid.Row="2" Margin="5">
                        <!--#region 좌측패널-->
                        <Grid Grid.Column="0">
                            <shortcut:ShorcutView Grid.Row="3"/>
                        </Grid>
                        <!--#endregion-->
                    </Grid>

                    <Grid Grid.Column="2">

                    </Grid>
                </Grid>
                <GridSplitter Style="{StaticResource VerticalSplitterStyle}" Grid.Column="1" Width="3" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                <Grid Grid.Column="2">
                    
                </Grid>
            </Grid>
            
        </Border>
        <!--#region 스테이터스바-->
        <Grid Grid.Row="3">
            <controls:SJS_StatusBarControl/>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>

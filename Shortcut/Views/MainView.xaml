<Window x:Class="Shortcut.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shortcut="clr-namespace:Shortcut.Views.ControlViews"
        xmlns:controls="clr-namespace:SJSControls.Controls.Composite;assembly=SJSControls"
        xmlns:viewmodels="clr-namespace:Shortcut.ViewModels"
        d:DataContext="{d:DesignInstance viewmodels:MainViewModel, IsDesignTimeCreatable=True}"
        xmlns:local="clr-namespace:Shortcut.Views"
        mc:Ignorable="d"
        Title="MainView"  WindowStyle="None" Background="{StaticResource COLOR_DARK_GRAY}" ResizeMode="CanResizeWithGrip" SizeChanged="Window_SizeChanged" PreviewMouseMove="TGB_OpenAndClose_PreviewMouseMove">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="20" ResizeBorderThickness="2"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <!--#region 탑바-->
        <controls:SJS_TopBarControl VerticalAlignment="Center" Grid.Row="0"/>
        <!--#endregion-->
        
        <!--#region 메인 보드-->
        <Border Grid.Row="1" Margin="2" BorderBrush="{StaticResource COLOR_SALMON}" BorderThickness=".5">
            <Grid Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <!--#region 좌측 보드-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="1"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--#region 상단메뉴-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <RadioButton Grid.Column="0" Grid.Row="0" GroupName="RadioGroup" x:Name="RB_Radio1" Style="{StaticResource BaseRadioButtonStyle}" Content="모니터1"/>
                        <RadioButton Grid.Column="0" Grid.Row="1" GroupName="RadioGroup" x:Name="RB_Radio2" Style="{StaticResource BaseRadioButtonStyle}" Content="모니터2"/>
                        <CheckBox Grid.Column="0" Grid.Row="2" x:Name="CHK_VerticalMode" Checked="CHK_VerticalMode_Checked" Unchecked="CHK_VerticalMode_Unchecked" Content="세로모드"/>
                        <CheckBox Grid.Column="0" Grid.Row="3" x:Name="CHK_AlwaysTopMode" Checked="CHK_AlwaysTopMode_Checked" Unchecked="CHK_AlwaysTopMode_Unchecked" Content="항상위에"/>
                        <CheckBox Grid.Column="0" Grid.Row="4" x:Name="CHK_MinimizeMode" Checked="CHK_MinimizeMode_Checked" Unchecked="CHK_MinimizeMode_Unchecked" Content="최소화모드"/>
                        <ToggleButton Grid.Column="0" Grid.Row="5" x:Name="TGB_OpenAndClose" Content="열기" PreviewMouseMove="TGB_OpenAndClose_PreviewMouseMove" IsChecked="True" Checked="TGB_OpenAndClose_Checked" Unchecked="TGB_OpenAndClose_Unchecked"/>
                        <Popup x:Name="myPopup" 
                            Placement="Relative" 
                            AllowsTransparency="True" 
                            PopupAnimation="Fade"
                            HorizontalOffset="0"
                            VerticalOffset="0">
                            <Popup.Style>
                                <Style  TargetType="{x:Type Popup}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=toggle,  Path=IsMouseOver}" Value="True">
                                            <Setter Property="IsOpen" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Popup.Style>
                            <Border IsHitTestVisible="False" Background="{StaticResource COLOR_GRAY}" BorderBrush="Gray" BorderThickness="1" CornerRadius="3">
                                <Grid>
                                    <TextBlock Text="단축키 : Ctrl + Q" Foreground="{StaticResource COLOR_WHITE}"  Margin="10,5" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                    <!--#endregion-->

                    <!--#region 라인-->
                    <Grid Grid.Row="1" Background="{StaticResource COLOR_BEIGE}" />
                    <!--#endregion-->

                    <!--#region 좌측 바로가기 메인화면-->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid Grid.Column="0">
                            <shortcut:ShorcutView Grid.Row="3"/>
                        </Grid>
                    </Grid>
                    <!--#endregion-->
                </Grid>
                <!--#endregion-->
                
                <!--#region 그리드스플리터-->
                <GridSplitter Style="{StaticResource VerticalSplitterStyle}" Grid.Column="1" Width="3" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                <!--#endregion-->
                
                <!--#region 우측 보드-->
                <Grid Grid.Column="2">

                </Grid>
                <!--#endregion-->
            </Grid>
        </Border>
        <!--#endregion-->
        
        <!--#region 스테이터스바-->
        <Grid Grid.Row="3">
            <controls:SJS_StatusBarControl/>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>

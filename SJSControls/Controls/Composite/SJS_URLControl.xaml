<UserControl x:Class="SJSControls.Controls.Composite.SJS_URLControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SJSControls.Controls.Composite"
             xmlns:base="clr-namespace:SJSControls.Controls.Basic"
             mc:Ignorable="d" x:Name="root" FontSize="11">
    <UserControl.Resources>
        <Style x:Key="myButton" TargetType="{x:Type Button}">
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="5"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource COLOR_GOLD}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Part_Border" Margin="1" BorderBrush="{StaticResource COLOR_KHAKI}" BorderThickness="2" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}" ContentSource="Content"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Part_Border" Property="BorderBrush" Value="DarkOrange"/>
                                <Setter TargetName="Part_Border" Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="Button.IsPressed" Value="True">
                                <Setter TargetName="Part_Border" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="Part_Border" Property="Background" Value="#404040"/>
                                <Setter Property="Foreground" Value="Yellow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <EventSetter Event="PreviewMouseMove" Handler="Border_PreviewMouseMove"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Margin" Value="2 2 2 2"/>
        </Style>
        <Style TargetType="{x:Type base:SJS_BaseTextBox}">
            <Setter Property="TBXTextColor" Value="Orange"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <Button x:Name="RunButton" Style="{StaticResource myButton}" Content="GO" Width="45" Command="{Binding RunNavigation}" CommandParameter="{Binding URLControlName}"/>
        <Popup x:Name="myPopup" 
               Placement="Relative" 
               AllowsTransparency="True" 
               PopupAnimation="Fade"
               HorizontalOffset="0"
               VerticalOffset="0">
            <Popup.Style>
                <Style  TargetType="{x:Type Popup}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=RunButton,  Path=IsMouseOver}" Value="True">
                            <Setter Property="IsOpen" Value="True"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Popup.Style>
            <Border IsHitTestVisible="False" Background="{StaticResource COLOR_GRAY}" BorderBrush="Gray" BorderThickness="1" CornerRadius="3">
                <Grid>
                    <TextBlock Text="{Binding Path=MyTag, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource COLOR_WHITE}"  Margin="10,5" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Popup>
        <base:SJS_BaseTextBox x:Name="WT1" Margin="3 0 3 0"  TBXHeight="20" TBXWidth="100"/>
        <TextBlock  Style="{StaticResource BaseTextBlockStyle}" Foreground="{StaticResource COLOR_YELLOW}" Margin="2 0 2 0"  Text="URL : " Width="35"/>
        <base:SJS_BaseTextBox x:Name="WT2" Margin="3 0 3 0" TBXHeight="20" TBXWidth="130"/>
        <Button Style="{StaticResource EPIButton2}" Foreground="{StaticResource COLOR_GOLD}" Content="저장" Width="40" Command="{Binding SaveSetting}"/>
        <Button Style="{StaticResource EPIButton2}" Foreground="{StaticResource COLOR_GOLD}" Content="삭제" Width="40" Command="{Binding ClearTextBox}"/>
    </StackPanel>
</UserControl>
